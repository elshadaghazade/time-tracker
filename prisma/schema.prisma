generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  Project[]
  tasks     TaskName[]
  entries   TimeEntry[]
}

model Project {
  id        String   @id @default(cuid())
  userId    String
  name      String
  color     String?  // e.g. "blue", "#3B82F6", etc. (your choice)
  isArchived Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries   TimeEntry[]

  @@unique([userId, name])         // avoid duplicates per user
  @@index([userId, isArchived])
  @@index([userId, name])
}

model TaskName {
  id        String   @id @default(cuid())
  userId    String
  name      String
  isArchived Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries   TimeEntry[]

  @@unique([userId, name])         // reuse task names cleanly
  @@index([userId, isArchived])
  @@index([userId, name])
}

model TimeEntry {
  id        String   @id @default(cuid())
  userId    String

  projectId String?
  taskNameId String?

  // For your UI: store minutes as integer
  minutes   Int      @default(0)

  // When did the work happen? (lets you report day/week/month accurately)
  occurredAt DateTime @default(now())

  // Optional notes (handy later)
  note      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  taskName  TaskName? @relation(fields: [taskNameId], references: [id], onDelete: SetNull)

  @@index([userId, occurredAt])
  @@index([userId, projectId, occurredAt])
  @@index([userId, taskNameId, occurredAt])
}